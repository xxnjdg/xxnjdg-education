<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!-- 数据库驱动位置 pom.xml导入了就不用写 -->
    <!--    <classPathEntry location="/Program Files/IBM/SQLLIB/java/db2java.zip" />-->

    <!--  generatorConfiguration 可以有多个 context 目的是从不同的数据库或具有不同的生成参数生成对象  -->
    <!--    id:此上下文的唯一标识符 -->
    <!--   targetRuntime  可选3个值 "MyBatis3"  默认值  "MyBatis3Simple" 在MyBatis3基础上没 example 方法 "MyBatis3DynamicSql" 为 MyBatis Dynamic SQL  -->
    <!--    flat 数据库一张表字段生成到一个 model 对象-->
    <context id="DB2Tables" targetRuntime="MyBatis3" defaultModelType="flat">

        <!--        识别sql关键字 在xml文件sql语句给关键字加上分隔符  不然执行会报错-->
        <property name="autoDelimitKeywords" value="true"/>
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>
        <property name="javaFileEncoding" value="UTF-8"/>

        <!--       model 对象 实现 Serializable 接口 生成 toString -->
        <!--       UnmergeableXmlMappersPlugin 设置后会直接覆盖 xml  没设置xml会追加 -->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
        <plugin type="org.mybatis.generator.plugins.UnmergeableXmlMappersPlugin"/>
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>

        <!--         type默认是使用 DefaultCommentGenerator 类 suppressAllComments suppressDate 属性-->
        <!-- 把默认生成器的注释和时间戳注释关了 自己写的注释生成类MyCommentGenerator是继承DefaultCommentGenerator 只重写了-->
        <!--  addFieldComment 方法 所以只有这个方法有影响 给 model 对象 加上数据库列注释-->
        <commentGenerator type="io.xxnjdg.notp.utils.mybatis.generator.MyCommentGenerator">
            <property name="suppressAllComments" value="true"/>
<!--                        <property name="addRemarkComments" value="true"/>-->
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <!--     driverClass:jdbc驱动类 connectionURL:url userId:用户名 password:密码   -->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://192.168.100.72:3306/xxnjdg_course?useUnicode=true&amp;characterEncoding=utf-8&amp;serverTimezone=Asia/Shanghai"
                        userId="root"
                        password="123">
            <!--解决mysql驱动升级到8.0后不生成指定数据库代码的问题-->
            <property name="nullCatalogMeansCurrent" value="true"/>
        </jdbcConnection>

        <!--        类型转换-->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!--       生成 model 位置包名 -->
        <javaModelGenerator targetPackage="io.xxnjdg.notp.course.model" targetProject="./xxnjdg-education-course/xxnjdg-education-course-service/src/main/java">
            <!--            <property name="enableSubPackages" value="true" />-->
            <!--            <property name="trimStrings" value="true" />-->
        </javaModelGenerator>

        <!--       生成 xml 位置包名  -->
        <sqlMapGenerator targetPackage="mybatis" targetProject="./xxnjdg-education-course/xxnjdg-education-course-service/src/main/resources">
            <!--            <property name="enableSubPackages" value="true" />-->
        </sqlMapGenerator>

        <!--        生成 mapper 位置包名 type MLMAPPER  表示使用xml  -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="io.xxnjdg.notp.course.mapper"
                             targetProject="./xxnjdg-education-course/xxnjdg-education-course-service/src/main/java">
            <!--            <property name="enableSubPackages" value="true" />-->
        </javaClientGenerator>

        <!--        <table schema="DB2ADMIN" tableName="ALLTYPES" domainObjectName="Customer" >-->
        <!--            <property name="useActualColumnNames" value="true"/>-->
        <!--            <generatedKey column="ID" sqlStatement="DB2" identity="true" />-->
        <!--            <columnOverride column="DATE_FIELD" property="startDate" />-->
        <!--            <ignoreColumn column="FRED" />-->
        <!--            <columnOverride column="LONG_VARCHAR_FIELD" jdbcType="VARCHAR" />-->
        <!--        </table>-->

        <!--       tableName % 全部表  -->
        <!--       generatedKey column id 主键  sqlStatement MySql MySql sql identity true 插入后会返回id -->
        <table tableName="%">
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>

        <!--      可能出现 每张表 主键列名字都不一样  单独配置 这里主键命名为 role_id 要配在 % 后 这样才能覆盖之前生成的 -->
<!--        <table tableName="sp_role">-->
<!--            <generatedKey column="role_id" sqlStatement="MySql" identity="true"/>-->
<!--        </table>-->

    </context>
</generatorConfiguration>